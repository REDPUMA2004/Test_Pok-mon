<h1 class="text-center my-4">Pokémon</h1>
{{#each .}}
<div class="container mb-4">
  <table class="table table-bordered">
    <tbody>
      <tr>
        <th scope="row" class="w-25">Nome</th>
        <td class="open-modal" data-id="{{id}}">{{nome}}</td>
      </tr>
      <tr>
        <th scope="row">Attacco</th>
        <td class="open-modal" data-id="{{id}}">{{attacco}}</td>
      </tr>
      <tr>
        <th scope="row">Difesa</th>
        <td class="open-modal" data-id="{{id}}">{{difesa}}</td>
      </tr>
    </tbody>
  </table>

  <div id="modal-{{id}}" class="modal" style="display: none">
    <div class="modal-content">
      <span class="close-modal">&times;</span>
      <h2>Dettagli Pokémon</h2>
      <p><strong>ID:</strong> {{id}}</p>
      <p><strong>Nome:</strong> {{nome}}</p>
      <p><strong>Attacco:</strong> {{attacco}}</p>
      <p><strong>Difesa:</strong> {{difesa}}</p>
    </div>
  </div>

  <button class="btn btn-danger" onclick="deletePokemon({{id}})">Elimina</button>
  <button class="btn btn-success" onclick="updatePokemon({{id}})">Modifica</button>
</div>
{{/each}}

<button class="btn btn-warning" onclick="insertPokemon()">Inserisci</button>
